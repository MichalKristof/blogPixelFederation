{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="flex flex-col h-screen items-center">
        <a href="/" class="text-2xl text-gray-600 py-10">
            <i class="fas fa-arrow-left"></i>
            Back
        </a>
        <h1 class="text-4xl text-gray-600 py-10">{{ blog.title }}</h1>

        <span>{{ blog.description }}</span>
        <p>{{ blog.content }}</p>
    </div>
{% endblock %}
